header.header
	nav.nav.nav--tours
		a.nav__el(href='/') Calorie-Tracker
	.header__logo
		img(src='/img/calorie_tracker.png' alt='calorie-tracker logo')
	nav.nav.nav--user
		if user
			a.nav__el.nav__el--logout(id="logout") log out
				a.nav__el(href='/me') 
					img.nav__user-img(src=`/users/${user.photo}` alt=`${user.name}`)
					span= user.name.split(' ')[0]
		else
			a.nav__el(href='/') Log in
			a.nav__el.nav__el--cta(href='/signup') Sign up